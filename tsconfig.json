{
  "compilerOptions": {
	"module": "commonjs",
	"target": "es2015",
	"outDir": "./lib",,
	"noImplicitAny" : true,
	"noImplicitReturns" : true,
	"noImplicitThis" : true,
	"strictNullChecks" : true,
	"declaration" : true
  },

  "build": "tsc",

  "include" : [
	  "src"
  ],

  "exclude" : [
	  "out",
	  "node_modules",
	  "**/__tests__/*"
  ]
}
